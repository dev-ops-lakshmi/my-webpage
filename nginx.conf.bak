events {
    worker_connections 1024;
}

http {
    # CRITICAL: This tells the browser to treat .html files as web pages
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    upstream my_ui_servers {
        server ui:80;
    }

    upstream my_backend_servers {
        server backend:5000;
    }

    server {
        listen 80;

        location / {
            proxy_pass http://my_ui_servers;
        }

        location /api/ {
            # This must match your Flask app's /api/ route
            proxy_pass http://my_backend_servers;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
        }
    }
}
