services:
  db:
    image: mysql:8.0
    environment:
      MYSQL_ROOT_PASSWORD: password
      MYSQL_DATABASE: my_app_db
    volumes:
      - db-data:/var/lib/mysql
    networks:
      - app-net

  backend:
    build: ./backend
    # No host port here, Docker handles internal balancing
    expose:
      - "5000"
    depends_on:
      - db
    networks:
      - app-net

  ui:
    build: ./ui
    # No host port here, Nginx will talk to these internally
    expose:
      - "80"
    depends_on:
      - backend
    networks:
      - app-net

  # THE LOAD BALANCER
  nginx-lb:
    image: nginx:alpine
    container_name: nginx-load-balancer
    ports:
      - "9090:80" # This is the ONLY port you need to remember!
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
    depends_on:
      - ui
    networks:
      - app-net

volumes:
  db-data:

networks:
  app-net:
    driver: bridge
